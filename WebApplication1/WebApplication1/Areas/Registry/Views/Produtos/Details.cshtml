@model Model.Tables.Produto

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Visualizando detalhes de um PRODUTO";
}


<div class="panel panel-primary">

    <div class="panel-heading">
        Visualizando detalhes de um PRODUTO
    </div>
    
    <div class="panel-body">

        @Html.Partial("~/Areas/Registry/Views/Produtos/_PartialDetailsContentPanel.cshtml", Model)

    </div>

    <div class="panel-footer panel-info">

        @Html.ActionLink("Alterar", "Edit", new { id = Model.Id }, new { @class = "btn btn-info" })
        @Html.ActionLink("Retornar para a listagem", "Index", null, new { @class = "btn btn-info" })

    </div>
</div>

@section ScriptPage {
    <script type="text/javascript">

        $(document).ready(function ()
            {
                $('li').removeClass("active");
                $('#liProdutos').addClass("active");
            }
        );
    </script>
}
